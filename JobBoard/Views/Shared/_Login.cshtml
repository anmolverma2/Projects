
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobBoard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JobBoard.styles.css" asp-append-version="true" />

    <style>
        .a{
            color: 007bff;
        }
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #007bff; /* Change navbar brand color */
        }

        .navbar-nav .nav-link {
            color: #333;
            font-weight: bold;
        }

            .navbar-nav .nav-link:hover {
                color: #555;
            }

        .navbar-nav .nav-item.active .nav-link {
            color: #007bff;
        }

        .navbar-nav .nav-item {
            margin-right: 15px; /* Increase margin for better spacing */
        }

        .navbar {
            background-color: #f8f9fa; /* Change navbar background color */
        }

        .footer {
            background-color: #f8f9fa; /* Change footer background color */
            padding: 20px 0; /* Add padding top and bottom */
            margin-top: 20px; /* Add margin top for better spacing */
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand a">JobBoard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
