@model SchoolMSDataAccess.Entities.Model.SubjectModel

<h2>Create Subject</h2>

<form asp-action="AddSubject" asp-controller="Teacher" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label for="Class">Class</label>
        <input type="text" id="Class" name="Class" class="form-control" asp-for="Class" />
        <span class="text-danger" asp-validation-for="Class"></span>
    </div>

    <div class="form-group">
        <label for="Language">Language</label>
        <input type="text" id="Language" name="Language" class="form-control" asp-for="Language" />
        <span class="text-danger" asp-validation-for="Language"></span>
    </div>

    

    <div class="form-group">
        <label for="TeacherId">Teacher</label>
        <select id="TeacherId" name="TeacherId" class="form-control" asp-for="TeacherId">
            <option value="">-- Select Teacher --</option>
            @if (Model.teachers != null)
            {
                foreach (var item in Model.teachers)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
        <span class="text-danger" asp-validation-for="TeacherId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
