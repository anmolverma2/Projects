@model IEnumerable<SchoolMSDataAccess.Entities.Model.StudentModel>

<h2>Student List</h2>

<form method="get" asp-action="Index" asp-controller="Student">
    <label for="name">Search by Name:</label>
    <input type="text" id="name" name="name" value="@ViewData["name"]" />
    <label for="className">Search by Class:</label>

    <input type="text" id="className" name="className" value="@ViewData["className"]" />
    <button type="submit">Search</button>
    <a href="/Student/Create">Create Student</a>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Class</th>
            <th>Roll Number</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.Class</td>
                    <td>@student.RollNumber</td>
                    <td>
                        @if (!string.IsNullOrEmpty(student.Image))
                        {
                            <img src="@student.Image" alt="Student Image" width="50" height="50" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No students found.</td>
            </tr>
        }
    </tbody>
</table>
